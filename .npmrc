# NPM Configuration for Coordino
# This ensures consistent behavior across all developers

# Require exact Node/npm versions specified in package.json engines field
engine-strict=true

# Save exact versions in package.json (no ^ or ~)
# This ensures all developers use identical dependency versions
save-exact=true

# Use the legacy peer dependencies algorithm
# Set to false to use npm v7+ strict peer dependency resolution
legacy-peer-deps=false

# Automatically install peer dependencies
auto-install-peers=true

# Fund messages - set to false to reduce noise during install
fund=false

# Update notifier - set to false to disable update notifications
update-notifier=false

# Progress bar during installation
progress=true

# Lock file version (should match npm version)
# lockfile-version=3
